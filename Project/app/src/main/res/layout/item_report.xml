<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_sanpham_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="Sản phẩm 1"
            android:textColor="#578AE6"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_masanpham_export"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custome_edittext"
            android:ems="10"
            android:fadeScrollbars="true"
            android:hint="Mã sản phẩm"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:scrollbars="horizontal"
            android:textColor="@color/black"
            android:textColorHint="#9F9E9E"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_sanpham_export" />

        <EditText
            android:id="@+id/editText_tensanpham_export"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custome_edittext"
            android:ems="10"
            android:fadeScrollbars="true"
            android:hint="Tên sản phẩm"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:scrollbars="horizontal"
            android:textColor="@color/black"
            android:textColorHint="#9F9E9E"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/editText_masanpham_export"
            app:layout_constraintTop_toBottomOf="@+id/text_sanpham_export" />

        <EditText
            android:id="@+id/editText_giasanpham_export"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custome_edittext"
            android:ems="10"
            android:fadeScrollbars="true"
            android:hint="Giá"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:scrollbars="horizontal"
            android:textColor="@color/black"
            android:textColorHint="#9F9E9E"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_masanpham_export" />

        <EditText
            android:id="@+id/editText_soluongsanpham_export"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custome_edittext"
            android:ems="10"
            android:fadeScrollbars="true"
            android:hint="Số lượng"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:scrollbars="horizontal"
            android:textColor="@color/black"
            android:textColorHint="#9F9E9E"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/editText_giasanpham_export"
            app:layout_constraintTop_toBottomOf="@+id/editText_masanpham_export" />

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#DAD8D8"
            app:layout_constraintTop_toBottomOf="@+id/editText_giasanpham_export"
            tools:layout_editor_absoluteX="-16dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_button"
        android:text="Thêm"
        android:textColor="@color/white"
        app:backgroundTint="@drawable/custom_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>