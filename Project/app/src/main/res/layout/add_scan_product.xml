<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="1dp"
        android:hint="Nhập Code"
        app:layout_constraintBottom_toBottomOf="@+id/btn_scan_find"
        app:layout_constraintEnd_toStartOf="@+id/btn_scan_find" />

    <EditText
        android:id="@+id/nameProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginRight="100dp"
        android:hint="Tên Sản phẩm"
        app:layout_constraintEnd_toEndOf="@+id/btn_scan_find"
        app:layout_constraintTop_toBottomOf="@+id/edtCode" />

    <Button
        android:id="@+id/btn_scan_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="30dp"
        android:text="Thêm sản phẩm"
        app:layout_constraintEnd_toEndOf="@+id/nameProduct"
        app:layout_constraintTop_toBottomOf="@+id/nameProduct" />
</androidx.constraintlayout.widget.ConstraintLayout>