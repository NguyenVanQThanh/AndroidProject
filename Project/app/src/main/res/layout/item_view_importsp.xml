<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_phieu"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="152dp"
            android:layout_height="230dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Mã sp:\n \nGiá:\n \nSố lượng tồn:\n \nSố lượng nhập:\n \nTrạng thái sp:\n"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/maSp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            android:text="PN001"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/giaSPx"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Sửa rửa mặt"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/maSp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/sltX"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="29/12/2023"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/giaSPx"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/slnX"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="29/12/2023"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/sltX"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ttX"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="29/12/2023"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/slnX"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginBottom="541dp"
            android:background="#DAD8D8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ttX"
            tools:ignore="Orientation" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
